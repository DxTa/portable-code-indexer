{
  "embedding": {
    "provider": "local",
    "model": "bge-small",
    "api_key": null
  },
  "indexing": {
    "exclude_patterns": [
      "node_modules/",
      "__pycache__/",
      ".git/",
      "*.pyc",
      "*.pyo",
      "*.so",
      "*.dylib",
      ".pci/"
    ],
    "include_patterns": [
      "**/*"
    ],
    "max_file_size_mb": 5
  },
  "chunking": {
    "max_chunk_size": 1200,
    "min_chunk_size": 50,
    "merge_threshold": 0.8,
    "greedy_merge": true
  },
  "search": {
    "default_limit": 10,
    "multi_hop_enabled": true,
    "max_hops": 2
  }
}